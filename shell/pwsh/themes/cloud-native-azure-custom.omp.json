{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#4321a1",
          "foreground": "#ffffff",
          "leading_diamond": "\ue0b6",
          "style": "diamond",
          "template": " {{ if .SSHSession }}\ueba9 {{else}}\uf0f0 {{ end }}{{ .UserName }}@{{ .HostName }} ",
          "trailing_diamond": "\ue0b0",
          "type": "session"
        },
        {
          "background": "#28398d",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "style": "folder"
          },
          "style": "powerline",
          "template": " \uf07b  {{ .Path }} ",
          "type": "path"
        },
        {
          "background": "#28398d",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#49134b{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#49134b{{ end }}",
            "{{ if gt .Ahead 0 }}#6445b8{{ end }}",
            "{{ if gt .Behind 0 }}#49134b{{ end }}"
          ],
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "powerline",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "type": "git"
        },
        {
          "background": "#2070d1",
          "background_templates": [
            "{{ if gt .Code 0 }}#f1184c{{ end }}"
          ],
          "foreground": "#ffffff",
          "leading_diamond": "<transparent,background>\ue0b0</>",
          "properties": {
            "always_enabled": true
          },
          "style": "diamond",
          "template": " \ue23a {{ if gt .Code 0 }}\uf00d {{ reason .Code }}{{ else }}\uf42e{{ end }} ",
          "trailing_diamond": "\ue0b4",
          "type": "status"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "background": "#2070d1",
          "foreground": "#ffffff",
          "style": "plain",
          "template": "<#0077c2,transparent>\ue0b6</> \uf489 {{ .Name }} <transparent,#0077c2>\ue0b2</>",
          "type": "shell"
        },
        {
          "background": "#5482d8",
          "background_templates": [
            "{{if eq \"Charging\" .State.String}}#6445b8{{end}}",
            "{{if eq \"Discharging\" .State.String}}#49134b{{end}}",
            "{{if eq \"Full\" .State.String}}#5482d8{{end}}"
          ],
          "foreground": "#ffffff",
          "invert_powerline": true,
          "powerline_symbol": "\ue0b2",
          "properties": {
            "charged_icon": "\ue22f ",
            "charging_icon": "\ueb2d ",
            "discharging_icon": "\uf244 "
          },
          "style": "powerline",
          "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}{{ .Error }}\uf295 ",
          "type": "battery"
        },
        {
          "background": "#28398d",
          "foreground": "#ffffff",
          "invert_powerline": true,
          "leading_diamond": "\ue0b2",
          "style": "diamond",
          "template": " \ue641 {{ .CurrentDate | date .Format }} ",
          "trailing_diamond": "\ue0b4",
          "type": "time"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "background": "#d13e20",
          "background_templates": [
            "{{ if contains \"iduks\" .Context }}#2070d1{{ end }}",
            "{{ if contains \"ituks\" .Context }}#6445b8{{ end }}",
            "{{ if eq \"duks01\" .Context }}#49134b{{ end }}",
            "{{ if eq \"duks02\" .Context }}#49134b{{ end }}"
          ],
          "foreground": "#ffffff",
          "leading_diamond": "\ue0b6",
          "style": "diamond",
          "template": " \u2388 <i>Kubernetes {{.Context}} cluster {{if .Namespace}}- {{.Namespace}} namespace{{end}} </i>",
          "trailing_diamond": "\ue0b0",
          "type": "kubectl"
        },
        {
          "background": "#d13e20",
          "background_templates": [
            "{{ if eq \"Infra - DEV\" .Name }}#2070d1{{ end }}",
            "{{ if eq \"Infra - TEST\" .Name }}#6445b8{{ end }}",
            "{{ if eq \"AKS - Dev\" .Name }}#49134b{{ end }}"
          ],
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": " \uebd8 <i>Subscription {{ .Name }} ({{ if .EnvironmentName | contains \"AzureCloud\" }}{{ \"Global\" }}{{ else }}{{ .EnvironmentName }}{{ end }}) </i>",
          "type": "az"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#2070d1",
          "style": "plain",
          "template": "pwsh \u276F",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "transient_prompt": {
    "background": "transparent",
    "foreground": "#6e92d3",
    "template": "{{ .Shell }}: "
  },
  "console_title_template": "{{ .Shell }}",
  "final_space": true,
  "version": 2
}
